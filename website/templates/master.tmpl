#attr query = 'IP or AS Number'
#attr graph = 'path to graph'
#attr infomessage = ''
#attr asn_descs = None
#attr ip_descs = None

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>$title</title>
    <link rel="stylesheet" type="text/css" href="${css_file}"/>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  </head>
  <body>
    <div id="container">
        <div id="header">
            <h1><a href="/">BGP Ranking</a></h1>
        </div>
        <div id="menu">
            <form method="post" action=".">
                <input type="text" name="query" value="$query"/><input type="submit" value="Submit"/>
            </form> <br/>
            <a href="/reload">Reload the report</a>
        </div>
        <div id="content">
            #if $query == ""
                <table id="hor-minimalist-a">
                    <thead>
                        <tr>
                            <th scope="col" >Timestamp</th>
                            <th scope="col" >ASN</th>
                            <th scope="col" >Rank</th>
                        </tr>
                    </thead>
                    #for $history in $histories
                    <tr>
                        <td>$history.timestamp</td>
                        <td><a href="/?query=$history.asn">$history.asn</a></td>
                        <td>$history.rankv4</td>
                    </tr>
                    #end for
                </table>
            #else
                <img src="$graph" border="0" alt="Graph of $query" />
                #if $asn_descs is not None
                    <table id="hor-minimalist-a">
                        <thead>
                            <tr>
                                <th scope="col" >Timestamp</th>
                                <th scope="col" >Owner</th>
                                <th scope="col" >Block</th>
                            </tr>
                        </thead>
                        #for $asn_desc in $asn_descs
                        <tr>
                            <td>$asn_desc.timestamp</td>
                            <td>$asn_desc.owner</td>
                            <td><a href="/?query=$query&ip_details=$asn_desc.id">$asn_desc.ips_block</a></td>
                        </tr>
                        #end for
                    </table>
                    #if $ip_details != ""
                        #if $ip_descs is not None
                            <table id="hor-minimalist-b">
                                <thead>
                                    <tr>
                                        <th scope="col" >Timestamp</th>
                                        <th scope="col" >IP Address</th>
                                        <th scope="col" >List Name</th>
                                        <th scope="col" >Infection type</th>
                                        <th scope="col" >Raw Informations</th>
                                        <th scope="col" >Whois entry</th>
                                    </tr>
                                </thead>
                                #for $ip_desc in $ip_descs
                                <tr>
                                    <td>$ip_desc.timestamp</td>
                                    <td>$ip_desc.ip_ip</td>
                                    <td>$ip_desc.list_name</td>
                                    <td>$ip_desc.infection</td>
                                    <td>$ip_desc.raw_informations</td>
                                    <td><pre>$ip_desc.whois</pre></td>
                                </tr>
                                #end for
                            </table>
                        #end if
                    #end if
                #end if
            #end if
        </div>
        <div id="footer"> Footer </div>

    </div>
  </body>
</html>

