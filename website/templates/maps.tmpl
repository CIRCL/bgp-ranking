#block main_content
    The original version of this map is available on the
    <a href=http://vis.stanford.edu/protovis/ex/projection.html>website of protovis</a><br/>

    To know the value of a color, set your mouse on the color gradient.

    <script type="text/javascript" src="js/countries.js"></script>
    <script type="text/javascript" src="js/ranks.js"></script>

    <script type="text/javascript+protovis">
        var fill = pv.Scale.linear()
            .domain(0, 0.1, 0.4, 1.5 , 2)
            .range("white", "lightgreen", "yellow", "red", "black");

        countries.forEach(function(c) {
            c.color = stats[c.code]
                ? fill(stats[c.code])
                : "lightgray"; // unknown
        });

        var w = 1200,
            h = 3 / 5 * w,
            geo = pv.Geo.scale("none").range(w, h);

        var vis = new pv.Panel()
            .width(w)
            .height(h);

        /* Latitude ticks. */
        vis.add(pv.Panel)
            .data(geo.ticks.lat())
        .add(pv.Line)
            .data(function(b) b)
            .left(geo.x)
            .top(geo.y)
            .strokeStyle("rgba(128,128,128,.3)")
            .lineWidth(1)
            .interpolate("cardinal")
            .antialias(false);

        /* Longitude ticks. */
        vis.add(pv.Panel)
            .data(geo.ticks.lng())
        .add(pv.Line)
            .data(function(b) b)
            .left(geo.x)
            .top(geo.y)
            .strokeStyle("rgba(128,128,128,.3)")
            .lineWidth(1)
            .interpolate("cardinal")
            .antialias(false);

        /* Countries. */
        vis.add(pv.Panel)
            .data(countries)
        .add(pv.Panel)
            .data(function(c) c.borders)
        .add(pv.Line)
            .data(function(b) b)
            .left(geo.x)
            .top(geo.y)
            .title(function(d, b, c) c.name)
            .fillStyle(function(d, b, c) c.color)
            .strokeStyle(function() this.fillStyle().darker())
            .lineWidth(1)
            .antialias(false);

        vis.add(pv.Panel)
            .width(402)
            .height(20)
            .left(498)
            .bottom(121)
            .strokeStyle("black")
            .lineWidth(1)
            .antialias(false)
          .add(pv.Label)
            .data([0, 0.5, 1, 1.5, 2])
            .left(function(d) 100 * this.index + 1)
            .textAlign("center")
            .textStyle("black")
            .font("14px sans-serif")
            .text(function(d) d)
          .add(pv.Bar)
            .data(pv.range(0, 2, 1/100))
            .left(function() this.index * 2)
            .width(4)
            .fillStyle(pv.Scale.linear()
            .domain(0, 0.1, 0.4, 1.5 , 2)
            .range("white", "lightgreen", "yellow", "red", "black"))
            .title(function(d) d);


        vis.render();

    </script>



#end block main_content
